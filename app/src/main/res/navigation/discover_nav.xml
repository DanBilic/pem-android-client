<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_nav"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.example.pemapp.discover.discoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" >
        <action
            android:id="@+id/action_discoverFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_discoverFragment_to_login_nav"
            app:destination="@id/login_nav" />
        <action
            android:id="@+id/action_discoverFragment_to_moments_nav"
            app:destination="@id/moments_nav" />
        <action
            android:id="@+id/action_discoverFragment_to_profile_nav"
            app:destination="@id/profile_nav" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.pemapp.discover.detailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_discoverFragment"
            app:destination="@id/discoverFragment" />
    </fragment>
    <include app:graph="@navigation/login_nav" />
    <include app:graph="@navigation/moments_nav" />
    <include app:graph="@navigation/profile_nav" />

</navigation>